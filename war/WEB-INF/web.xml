<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>GameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag_943.servlet.GameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TitlePageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag_943.servlet.TitlePageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag_943.servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EndCreditsServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.tbag_943.servlet.EndCreditsServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
	<servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TitlePageServlet</servlet-name>
    <url-pattern>/titlePage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GameServlet</servlet-name>
    <url-pattern>/game</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
		<servlet-name>EndCreditsServlet</servlet-name>
		<url-pattern>/EndCredits</url-pattern></servlet-mapping>
	</servlet-mapping>
</web-app>
